{% extends 'FabLabBundle:Adherent:adherent_base.html.twig' %}

{% form_theme form _self %}

{% block form_row %}
<div class="form-group row">
    <div class="col-sm-2">
        {{ form_label(form) }}
    </div>

    <div class="col-sm-10">
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_errors(form) }}
</div>
{% endblock form_row %}


{% block container %}
    <div class="well">
        {{ form(form) }}
    </div>
{% endblock %}


