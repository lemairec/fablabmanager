{% extends 'FabLabBundle::base_fablab.html.twig' %}

{% block body %}

<div class="container bs-docs-container">
    <div class="panel panel-default", style="width:100%">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/produit/edit/0'">ADD</button>
        </div>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Type</th>
                <th>Price</th>
                <th>Unite</th>
            </tr>
            {% for produit in produits %}
            <tr>
                <td><a href="/produit/edit/{{produit.id}}">{{produit.id}}</td>
                <td>{{produit.name}}</td>
                <td>{{produit.categorie}}</td>
                <td>{{produit.price}}</td>
                <td>{{produit.unite}}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
